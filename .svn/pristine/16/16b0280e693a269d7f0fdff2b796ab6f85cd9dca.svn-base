<!DOCTYPE html>
<html>
<% include head %>
    <body class="hold-transition skin-blue sidebar-mini">
        <div class="wrapper">
            <% include header %>
                <!-- Left side column. contains the logo and sidebar -->
                <% include leftnav %>
                    <!-- Content Wrapper. Contains page content -->
                    <div class="content-wrapper">
                        <!-- Content Header (Page header) -->
                        <section class="content-header">
                            <h1>
                                Dashboard
                                <small>Control panel</small>
                            </h1>
                            <ol class="breadcrumb">
                                <li>
                                    <a href="#">
                                        <i class="fa fa-dashboard"></i> Home</a>
                                </li>
                                <li class="active">Dashboard</li>
                            </ol>
                        </section>
                        <!-- Main content -->
                        <section class="content" >
                            <div class='callout callout-info'>
                                <h2> Swipeloans!</h2>
                                <h4> Welcome to Swipeloans dashboard.</h4>
                            </div>
                            <!-- Small boxes (Stat box) -->
                            <div class="row">
                                <!-- ./col -->
                                <div class="col-lg-6 col-xs-6">
                                    <!-- small box -->
                                    <div class="small-box bg-green">
                                        <div class="inner">
                                            <h3><%=  data_count[0].user %></h3>
                                            <p>Total users</p>
                                        </div>
                                        <div class="icon">
                                            <i class="ion ion-android-contacts"></i>
                                        </div>
                                        <a href="/webcontrol/user" class="small-box-footer">More info
                                            <i class="fa fa-arrow-circle-right"></i>
                                        </a>
                                    </div>
                                </div>
                                <!-- ./col -->
                                <div class="col-lg-6 col-xs-6">
                                    <!-- small box -->
                                    <div class="small-box bg-yellow">
                                        <div class="inner">
                                            <h3><%=  data_count[1].loan %></h3>
                                            <p>Total Loans</p>
                                        </div>
                                        <div class="icon">
                                            <i class="ion ion-social-usd"></i>
                                        </div>
                                        <a href="/webcontrol/loan" class="small-box-footer">More info
                                            <i class="fa fa-arrow-circle-right"></i>
                                        </a>
                                    </div>
                                </div>
                                <!-- ./col --
                    </div>>
                    <!-- /.row -->
                        </section>
                        <!-- /.content -->
                        </div>
                        <!-- /.content-wrapper -->
                        <% include footer %>
                    </div>

    </body>

</html>